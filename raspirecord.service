[Unit]
Description=RaspiRecordSync Auto Recording Service
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/RaspiRecordSync
ExecStart=/bin/bash /home/pi/RaspiRecordSync/start_realtime_system.sh
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target 